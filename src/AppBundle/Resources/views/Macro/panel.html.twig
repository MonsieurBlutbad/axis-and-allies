{% macro create(header, body, footer) %}
    <div class="panel panel-success">
        <div class="panel-heading">{{ header|raw }}</div>
        <div class="panel-body">
            {{ body|raw }}
        </div>
        <div class="panel-footer">
            <small>
                {{ footer|raw }}
            </small>
        </div>
    </div>
{% endmacro %}

