{% block title %}
    Land Units
{% endblock %}

{% block body %}
    <div class="alert alert-info">
        <ul>
            <li>
                All Land Units can attack, move and defend only in territories
            </li>
            <li>
                Infantry, Artillery, Mechanized Infantry and Tanks can capture hostile territories and convert friendly neutrals
            </li>
            <li>
                All Land Units can be carried by transports
            </li>
        </ul>
    </div>
    {% import 'AppBundle:Macro:button_collapse.html.twig' as buttonCollapse %}
    {{ buttonCollapse.create('unit_land_units_infantry', 'Infantry', block('infantry')) }}
    {{ buttonCollapse.create('unit_land_units_artillery', 'Artillery', block('artillery')) }}
    {{ buttonCollapse.create('unit_land_units_mechanized_infantry', 'Mechanized Infantry', block('mechanized_infantry')) }}
    {{ buttonCollapse.create('unit_land_units_tank', 'Tank', block('tank')) }}
    {{ buttonCollapse.create('unit_land_units_antiaircraft_artillery', 'Antiaircraft Artillery (AAA)', block('antiaircraft_artillery')) }}
{% endblock %}

{% block infantry %}
    <table class="table table-bordered">
        <tr>
            <td><strong>Cost</strong></td>
            <td>3</td>
        </tr>
        <tr>
            <td>
                <strong>Attack</strong>
            </td>
            <td>1 (2 when supported by artillery)</td>
        </tr>
        <tr>
            <td>
                <strong>Defense</strong>
            </td>
            <td>2</td>
        </tr>
        <tr>
            <td>
                <strong>Move</strong>
            </td>
            <td>1</td>
        </tr>
    </table>
    <h5>Unit Characteristics</h5>
    <ul>
        <li>
            <strong>Supported by Artillery: </strong>Attacks with 2 when attacking together with an Artillery (one-per-one)
        </li>
    </ul>
{% endblock %}

